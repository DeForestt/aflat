
.needs <std>
import { fPrint } from "io" under io;
import { worker } from "concurrency" under async;

export adr loadingBar(adr _arg) : async.worker {
	while (true) {
		io.fPrint("Loading: ");
		for int j = 0; j < 10; j = j + 1 {
			io.fPrint(".");
			sleep(0, 500000000);
		};
		io.fPrint("\r                                 \r");
	};
};
