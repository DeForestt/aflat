
int graghLin(int m, int b, int scale){
	int i = scale * 1;
	int j = 0;
	int mx;
	int total;
	while (i > -1){
		j = 0;
		print("|");
		while (j < scale){
			mx = j * m;
			total = mx + b;
			if (i == total){
				print("*");
			};
			if(i != total){
				print("-");
			};
			j = j + 1;
		};
		i = i - 1;
		print("\n");
	};
	i = 0;
	print("-");
	while(i < scale){
		print("-");
		i = i + 1;
	};
	print("\n");
	return 0;
};
