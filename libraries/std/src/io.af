int readString(adr pointer){
        char input = ' ';
        char nl = '\n';
        char null = '\0';
        while(input != nl){
                pull ?input;
                pointer =: input;
                if(input == nl){pointer =: null};
                pointer = pointer + 1;
        };
        pointer =: null;
        return  0;
};

int clearInput(){
        char nl = ascii(10);
