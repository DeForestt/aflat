.needs <asm>
.needs <std>

import {ascii, len} from "strings" under str;
import {exp, longExp} from "math" under math;
import string from "String";
import { print } from "String" under st;
export int printInt(int i);

private int charToColor(const char c){
        if c == 'B' return 30;
        if c == 'r' return 31;
        if c == 'g' return 32;
        if c == 'b' return 33;
        if c == 'c' return 34;
        if c == 'm' return 35;
        if c == 'p' return 36;
       if c == 'w' return 37;
};

/**
 * Read characters from stdin into the provided buffer until a newline,
 * writing a null terminator and returning 0 on completion.
 */
export int readString(adr pointer){
        const char input = ' ';
        const char nl = '\n';
        const char null = '\0';
        while(input != nl){
                sys_read(0, ?input, 1);
                pointer =: input;
                if(input == nl){pointer =: null};
                pointer = pointer + 1;
        };
        pointer =: null;
        return  0;
};

// Write a single character to stdout.
export int printChar(const char c){
        sys_write(1, ?c, 1);
        return 0;
};

private int clearInput(){
        const char nl = str.ascii(10);
        const char buffer = ' ';
        while (buffer != nl)
                sys_read(0, ?buffer, 1);
        return 0;
};

/**
 * Print a null-terminated string to stdout and optionally wrap it with ANSI
 * color escape codes when `color` is non-null.
 */
export int print(const adr input, * const char color){
        const int len = str.len(input);
        if color != '\0' {
                print("\e[");
                printInt(charToColor(color));
                printChar('m');
        };
        sys_write(1, input, len);
        if color != '\0'
                print("\e[0m");
        return 0;
};

// Convert a nibble-sized integer (0-15) to its hexadecimal character.
export char toChar(const int input){
        char output = '0';
        if(input > 9){output = 'X'};
        if(input == 0){output = '0'};
        if(input == 1){output = '1'};
        if(input == 2){output = '2'};
        if(input == 3){output = '3'};
        if(input == 4){output = '4'};
        if(input == 5){output = '5'};
        if(input == 6){output = '6'};
        if(input == 7){output = '7'};
        if(input == 8){output = '8'};
        if(input == 9){output = '9'};
        if(input == 10){output = 'A'};
        if(input == 11){output = 'B'};
        if(input == 12){output = 'C'};
        if(input == 13){output = 'D'};
        if(input == 14){output = 'E'};
        if(input == 15){output = 'F'};

        return output;
};

private char longtoChar(const long input){
        if input == #0 return '0';
        if input == #1 return '1';
        if input == #2 return '2';
        if input == #3 return '3';
        if input == #4 return '4';
        if input == #5 return '5';
        if input == #6 return '6';
        if input == #7 return '7';
        if input == #8 return '8';
        if input == #9 return '9';
        if input == #10 return 'A';
        if input == #11 return 'B';
        if input == #12 return 'C';
        if input == #13 return 'D';
        if input == #14 return 'E';
        if input == #15 return 'F';

        return 'X';
};

// Convert a hexadecimal character back to its numeric value.
export int toInt(const char input){
        if(input == '0'){return 0};
        if(input == '1'){return 1};
        if(input == '2'){return 2};
        if(input == '3'){return 3};
        if(input == '4'){return 4};
        if(input == '5'){return 5};
        if(input == '6'){return 6};
        if(input == '7'){return 7};
        if(input == '8'){return 8};
        if(input == '9'){return 9};
        if(input == 'A'){return 10};
        if(input == 'B'){return 11};
        if(input == 'C'){return 12};
        if(input == 'D'){return 13};
        if(input == 'E'){return 14};
        if(input == 'F'){return 15};
        return -1;
};

/**
 * Read `sigfigs` digits from stdin and convert them into an integer, clearing
 * the remainder of the line afterward.
 */
export int pullInt(const int sigfigs){
        int i = sigfigs - 1;
        int value = 0;
        int h = 0;
        int factor = 0;
        const char input;
        while (i > -1){
                sys_read(0, ?input, 1);
                h = toInt(input);
                factor = math.exp(10, i);
                h = factor * h;
                value = value + h;
                i = i - 1;
        };
        clearInput();
        return value;
};

// Print a signed integer in base 10.
export int printInt(int input){
        int h = 0;
        const int ten = 10;
        int factor = 0;
        int i = 0;

        if (input == 0){
                print("0");
                return 0;
        };

        if (input < 0){
                print("-");
                input = input * -1;
        };

        h = input * 1;
        while (h != 0){
                h = h / ten;
                i = i + 1;
        };
        i = i - 1;

        char out;
        while (i > -1){
                factor = math.exp(10, i);
                h = input / factor;
                out = toChar(h);
                printChar(out);
                h = h * factor;
                input = input - h;
                i = i - 1;
        };
        return 0;
};

// Print an unsigned integer without sign handling.
export int printUnsignedInt(int input){
        int h = 0;
        const int ten = 10;
