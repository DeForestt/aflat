// Render the contents of a pointer as hexadecimal characters.
export int printHex(adr input){
        long h = #0;
        long factor = 0;
        int i = 0;

        if (input == #0){
                print("0");
                return 0;
        };

        if (input < #0){
                print("-");
                input = input * -1;
        };

        h = input;
        while (h != #0){
                h = h / #16;
                i = i + 1;
        };
        i = i - 1;

        while (i > -1){
                factor = math.longExp(16, i);
                h = input / factor;
                const char out = longtoChar(h);
                printChar(out);
                h = h * factor;
                input = input - h;
                i = i - 1;
        };
        return 0;
};

// Print a signed 64-bit integer.
export int printLong(long input){
        long h = 0;
        const long ten = 10;
        long factor = 0;
        int i = 0;

        if (input == #0){
                print("0");
                return 0;
        };

        if (input < #0){
                print("-");
                input = input * -1;
        };

        h = input;
        while (h != #0){
                h = h / ten;
                i = i + 1;
        };
        i = i - 1;

        while (i > -1){
                factor = math.longExp(10, i);
                h = input / factor;
                const char out = longtoChar(h);
                printChar(out);
                h = h * factor;
                input = input - h;
                i = i - 1;
        };
        return 0;
};

// Emit a floating point value with six fractional digits of precision.
export int printFloat(const adr f){
	// use bit manipulation to convert float to int
	int i = f as int;
	// get sign
	const int sign = i >> 31;
	// get exponent
	i = f as int;
	int exponent = (i >> 23) & 255;

	// get mantissa
	int mantissa = i & 8388607;

	// denormalize
	if exponent == 0 {
		exponent = 1;
		const int man = mantissa << 1;
		mantissa = man;
	} else {
		exponent = exponent - 127;
		mantissa = mantissa | 8388608;
	};

	// calculate float
	const int whole = mantissa >> (23 - exponent);
	// get fractional part
	int frac = mantissa & (8388607 >> exponent);
	// calculate fractional part
	int fracPart = 0;
	int mul = 5 * math.exp(10, 6);
	int fracCount = 0;
	// ffffffff = 4294967295
	while (frac != 0) & (frac <= 429496729) {
		const int nfrac = frac << 1;
		const int bit = nfrac >> 23;
		frac = nfrac;
		fracPart = fracPart + (bit * mul);
		frac = frac & 8388607;
		mul = mul / 2;
		fracCount = fracCount + 1;
	};

	if sign == -1 {
		printChar('-');
	};
	printInt(whole);
	printChar('.');
	printInt(fracPart);
};

// Clear the terminal by issuing the ANSI escape sequence.
export int clear(){
        print("\e[1;1H\e[2J");
        return 0;
};

/**
 * Lightweight string formatter similar to printf that supports `{}` slots and
 * dispatches to the relevant print helpers.
 */
export int fPrint(const adr fmt, * adr args) {
    const string s = fmt;

    for int i = 0; i < s.len(); i++ {
        if s.at(i) == '%' {
            i++;
            if s.at(i) == 'a' {
                print(args as adr);
                args = args + adr;
            } else if s.at(i) == 'c' {
                printChar(args as char);
                args = args + char;
            } else if s.at(i) == 'd' {
                printInt(args as int);
                args = args + int;
            } else if s.at(i) == 's' {
                st.print(args as string);
                args = args + adr;
            } else if s.at(i) == 'b' {
                const bool b = args as bool;
                if b print("true")
                else print("false");
                args = args + bool;
            } else if s.at(i) == 'h' {
                printHex(args as adr);
                args = args + adr;
            } else {
                printChar('%');
                printChar(s.at(i));
            };
        } else {
            printChar(s.at(i));
        };
    };
    return 0;
};
