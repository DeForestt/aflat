export char ascii(int input){
	adr caster = ?input;
	return caster as char;
};

export int len(adr input){
	char null = ascii(0);
    int i = 0;
	while(input as char != null ){
        i = i + 1;
		input = input + 1;
	};
	return i;
};

export int str_comp(adr str1, adr str2){
        int len1 = len(str1);
        int len2 = len(str2);

        if(len1 != len2){ return 0; };

        int i = 0;

        while(i < len1){
                i = i + 1;
                char ch1 = str1 as char;
                char ch2 = str2 as char;
                if (ch1 != ch2){return 0;};
                str2 = str2 + 1;
                str1 = str1 + 1;
        };

        return 1;
};

export int str_concat(adr str1, adr str2, adr pointer){
    char null = '\0';
    char loader;
    while(str1 as char != null){
        loader = str1 as char;
        pointer =: loader;
        str1 = str1 + 1;
        pointer = pointer + 1;
    };

    while(str2 as char != null){
        loader = str2 as char;
        pointer =: loader;
        str2 = str2 + 1;
        pointer = pointer + 1;
    };

    pointer =: null;

    return 0;
};

export int str_toInt(adr input){
    int mul = 1;
    char ch1 = input as char;
    if(ch1 == '-'){
        mul = -1;
        input = input + #1;
    };
    
    char null = ascii(0);
    int factor = 0;
    int size = len(input);
    int result = 0;
    int i = size - 1;
    while(i > -1){
        factor = math.exp(10, i);
        char ch2 = input as char;
        int num = io.toInt(ch2);
        factor = factor * num;
        result = result + factor;
        i = i - 1;
        input = input + 1;
    };
    result = result * mul;
    return result;
};

export int int_toString(int input, adr buffer){
        int h = 0;
        int ten = 10;
        int factor = 0;
        int i = 0;
        char null = ascii(0);

        if (input == 0){
                buffer =: '0';
                buffer =: null;
                buffer = buffer + #1;
                return 0;
        };

        if (input < 0){
                buffer =: '-';
                buffer = buffer + #1;
                input = input * -1;
        };

        h = input * 1;
        while (h != 0){
                h = h / ten;
                i = i + 1;
        };

        i = i - 1;

        char out = ' ';
        while (i > -1){
                factor = math.exp(10, i);
                h = input / factor;
                out = io.toChar(h);
                buffer =: out;
                buffer = buffer + #1;
                h = h * factor;
                input = input - h;
                i = i - 1;
        };
        buffer =: null;
        return 0;
};

