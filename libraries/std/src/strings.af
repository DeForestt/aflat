export int hex_toInt(adr hex){
	int result = 0;
	int i = 0;
	char ch = hex as char;
	while (ch != '\0'){
		int temp = io.toInt(ch);
		int adder = result * 16;
		result = temp + adder;
		hex = hex + 1;
		ch = hex as char;
		i = i + 1;
	};
	return result;
};