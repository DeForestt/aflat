export adr str_subString(int start, int length, adr str, adr buff) {
	adr cleanStart = NULL;
	cleanStart = ?start;
	int go = cleanStart as int;
	str = str + go;

	adr point;
	point = buff;

	int i = 0;

	while (i < length) {
		char ch = str as char;
		point =: ch;
		point = point + #1;
		str = str + #1;
		i = i + 1;
	};
	point =: '\0';

	return buff;
};

export adr str_reverse(adr in, adr buff){
	int length = len(in);
	adr buffPtr; buffPtr = buff;
	
	
	for int i = length - 1; i > -1; i = i - 1 {
		
		adr pointer;
		pointer = in + i;
		
		char ch = pointer as char;
		buff =: ch;
		buff = buff + 1;
	};

	buff =: '\0';

	return buffPtr;
};

export char str_at(adr str, int i){
	for int j = 0; j < i; j = j + 1; {
		str = str + #1;
	};
	char ch = str as char;
	return ch;
};

export int str_forEach(adr s, adr foo, adr args){
	int in = len(s);
	int i;
	for i = 0; i < in; i = i + 1; {
		char c = str_at(s, i);
		int break = foo(c, i, args);
		if (break == 1) {
			return break;
		};
	};
	return 0;
};

