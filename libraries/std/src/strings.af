	int zeros = size - i;
	if  zeros < 0 {
		zeros = 0;
	};

	h = 0;
	i = 0;

	// add the zeros
	while  zeros > 0 {
		buffer =: '0';
		buffer = buffer + #1;
		zeros = zeros - 1;
	};


	if (input == 0){
		buffer =: '0';
		buffer =: null;
		buffer = buffer + #1;
		return 0;
	};

	if (input < 0){
		buffer =: '-';
		buffer = buffer + #1;
		input = input * -1;
	};

	h = input * 1;
	while (h != 0){
		h = h / ten;
